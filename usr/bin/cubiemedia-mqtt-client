#!/usr/bin/python3
# -*- coding: utf-8 -*-
import re
import os
import sys

snap_path = os.getenv('SNAP')
if not snap_path:
    snap_path = "/home/stonedone/PycharmProjects/cubiemedia-mqtt-client"
sys.path.append(f'{snap_path}/src')
sys.path.append(f'{snap_path}/usr/lib/python3/dist-packages')
sys.path.append(f'{snap_path}/lib/python3.8/site-packages')
sys.path.append(f'{snap_path}/lib/python3.9/site-packages')

from mqtt_client import main

if __name__ == '__main__':
    sys.argv[0] = re.sub(r'(-script\.pyw|\.exe)?$', '', sys.argv[0])
    sys.exit(main())
